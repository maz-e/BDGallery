<?xml version="1.0" encoding="utf-8"?>
<form
				addrulepath="/administrator/components/com_bdgallery/models/rules"
>
	<fieldset>
		<field
			name="id"
			type="hidden"
		/>
		<field
			name="album_name"
			type="text"
			label="COM_BDGALLERY_BDGALLERY_ALBUM_LABEL"
			description="COM_BDGALLERY_BDGALLERY_ALBUM_DESC"
			size="40"
			class="inputbox input-xlarge input-large-text"
			validate="album"
			required="true"
			default=""
		/>
		<field
			name="description"
			type="textarea"
			class=""
			default=""
			label="COM_BDGALLERY_BDGALLERY_FIELD_DESCRIPTION_LABEL"
			description="COM_BDGALLERY_BDGALLERY_FIELD_DESCRIPTION_DESC"
			rows="10"
			cols="5"
		/>
		<field
			name="catid"
			type="category"
			extension="com_bdgallery"
			class="inputbox"
			default=""
			label="COM_BDGALLERY_BDGALLERY_FIELD_CATID_LABEL"
			description="COM_BDGALLERY_BDGALLERY_FIELD_CATID_DESC"
			required="true"
		>
			<option value="0">JOPTION_SELECT_CATEGORY</option>
		</field>
		<field
			name="published"
			type="list"
			class="chzn-color-state"
			default="0"
			size="1"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC"
		>
				<option value="1">JPUBLISHED</option>
				<option value="0">JUNPUBLISHED</option>
		</field>
		<field
			name="folderlist"
			type="folderlist"
			default=""
			label="COM_BDGALLERY_BDGALLERY_FIELD_FOLDERLIST_LABEL" 
			directory="images/bladis"
		/>
		<field
			name="imgfolder"
			type="media"
			class=""
			default=""
			label="COM_BDGALLERY_BDGALLERY_FIELD_IMGFOLDER_LABEL"
			description="COM_BDGALLERY_BDGALLERY_FIELD_IMGFOLDER_DESC"
			directory=""
		/>
	</fieldset>
</form>
